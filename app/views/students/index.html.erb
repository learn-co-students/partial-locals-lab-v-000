<%= form_tag students_search_path, method: "get" do |s| %>
	<%= label_tag :name, "Search by name" %>
	<%= text_field_tag :name %>
	<%= submit_tag "Search" %>
<% end %>


<% if @search_results.present? %>
	<% @search_results.each do |result| %>
		<%= render partial: 'student', locals: {student: result} %>
	<% end %>
<% else %>
	<% @students.each do |student| %>
		<%= render partial: 'student', locals: {student: student} %>
	<% end %>
<% end %>