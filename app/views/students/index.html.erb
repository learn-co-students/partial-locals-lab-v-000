
<%= form_tag students_path, method: :get do%>
	<%= text_field_tag :search_input, params[:search_input] %>
	<%= submit_tag 'Search' %>
<% end %>

<% if @students != nil %>
<% #binding.pry %>
	<% @students.each do |student| %>
		<%= render partial: 'student', locals: {student: student} %>
	<% end %>
<% else %>
	No matches
<% end %>
