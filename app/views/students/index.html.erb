<%= form_tag students_path, method: "get" do %>
  <%= label_tag :search_name, "Search for a student by name:" %>
  <%= text_field_tag :search_name, params[:search_name] %>
  <%= submit_tag("Search") %>
<% end %>

<% @students.each do |student| %>
  <li><%= render partial: "student", locals: {student: student} %></li>
<% end %>
