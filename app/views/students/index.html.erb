<h2>Students</h2>

<%= form_tag(students_path, method: "get") do %>
  <%= label_tag(:search, "Search for:") %>
  <%= text_field_tag(:search) %>
  <%= submit_tag("Search") %>
<% end %>

<% @students.sort_by{|s| s.name}.each do |single_student| %>
  <%= render partial: 'student', locals: {student: single_student} %>
<% end %>
