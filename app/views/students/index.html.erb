<h1>Students:</h1>

<%= form_tag students_path, method: "get" do %>
<p>
  <%= text_field_tag :search, nil, placeholder: 'Enter your search query here' %>
  <%= submit_tag "Search"%>
</p>
<% end %>

<% @students.order(:name).each do |student| %>
  <%= render partial: 'student', locals: {student: student} %>
<% end %>
