<%= form_tag students_path, method: :get do %>
    <label>Name:</label>
    <%= text_field_tag :name %>
    <%= submit_tag "Search" %>
<% end %>

<ul>
<% @students.each do |student| %>
    <% if params[:name].present? %>
        <% if student.name.downcase.include?(params[:name].downcase) %>
            <%= render partial: 'student', locals: {student: student} %><
        <% end %>
    <% else %>
        <%= render partial: 'student', locals: {student: student} %>
    <% end %>
<% end %>
</ul>