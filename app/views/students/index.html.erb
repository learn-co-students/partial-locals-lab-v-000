<%= form_tag students_path do %>
  <label>Name: </label><br>
  <%= text_field_tag :'name', params[:name] %><br>
  <%= submit_tag "Search" %>
<% end %>

<!-- We iterate through the @students HERE because then we pass each individual student as a local. -->

<% @students.each do |student| %>
<%= render partial: 'student', locals: {student: student} %>
<% end %>
