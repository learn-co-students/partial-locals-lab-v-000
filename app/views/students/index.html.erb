<h2>Students</h2>
<%= form_tag students_path, method: :get do %>
  <%= text_field_tag(
      :search,
      params[:search],
      placeholder: "Search",
      class: "form-control"
  ) %>
  <%= submit_tag "Search", :name => nil, class: "btn btn-primary" %>
<% end %>

<% if @students.blank? %>
  <h4>No students match that name</h4>
<% end %>

<% @students.each do |student| %>
  <%= render partial: "student", locals: {student: student} %>
<% end %>
