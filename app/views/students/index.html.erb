
<h3>Find a student by name:</h3>

#1 students_path gives us the route of 'students#index'
#2 :query, params[:query]   ....adds a key to the params hash


<%= form_tag students_path, method: :get do %>					
	<%= text_field_tag :query, params[:query] %>
  <%= submit_tag "Search"%>
<% end %>

<% @students.each do |student| %>
  <%= render partial: 'student', locals: {student: student} %>
<% end %>
 