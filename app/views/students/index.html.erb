<h1>Students:</h1>

  <%= form_tag students_path, method: :get do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag :submit %>
  <% end %>

  <% if @students.present? %>
    <% @students.each do |student| %>
      <%= render partial: "student", locals: {student:student}%>
    <% end %>
  <% else %>
    <p>No results returned for your search!</p>
  <% end %>
