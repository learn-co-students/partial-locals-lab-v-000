<%= form_tag students_path, method: :get do %>
  <p>
    <%= text_field_tag :name, params[:name], placeholder: "Search Name" %>
    <%= submit_tag "Search", name: nil %>
  </p>
<% end %>


<% @students.each do |student| %>
  <%= render partial: "student", locals: { student: student } %>
<% end %>

<% if @students.blank? %>
  <h4>No students found whose name contains <%= params[:name] %></h4>
<% end %>