<%= form_tag students_path do %>
  <%= label_tag :name %>
  <%= text_field_tag :name, params[:name] %>
  <%= submit_tag "Search Students" %>
<% end %>

<% if @student == nil %>
  <% @students.each do |student| %>
  <%= render partial: "student", locals: {student: student} %>
  <% end %>
<% else %>
  <% @student.each do |student| %>
  <%= render partial: "student", locals: {student: student} %>
  <% end %>
<% end %>
