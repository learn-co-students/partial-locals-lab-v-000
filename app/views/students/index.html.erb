<h2>Search for a Student:</h2>
<%= form_tag students_path, method: 'get' do %>
<%= label_tag 'Enter Students Name:' %>
<%= text_field_tag :student_name %>
<%= submit_tag 'Find Student' %>
<% end %>

<h2>Seach Results:</h2>

<ul>
<% @students.each do |student| %>
  <li><%= render partial: 'student', locals: { student: student } %></li>
<% end %>
</ul>
