<h1>Students</h1>
<%= form_tag students_path, method: "get" do %>
  <%= text_field_tag 'search', nil, :placeholder => "search by name" %>
  <br>
  <%= submit_tag "Search" %>
<% end %>

<% if !@students.empty? %>
  <% @students.each do |student| %>
    <%= render :partial => 'student', :locals => {:student => student} %>
  <% end %>
<% end %>
